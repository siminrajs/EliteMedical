
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
        $(document).ready(() => {
            $(".lightgallery").lightGallery({
                pager: true
            });
        });
</script>

<section class="inr-cnct" data-aos="fade-up" data-aos-delay="300">
    <div class="cus-container">
        <div class="row">
            <div class="col-md-12 ">
                <div class=" cnt_inr">
                    <h3>
                        Special Offers
                        <span>
                            Special Offers
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="hm-specialization mdScn promo" data-aos="fade-up" data-aos-delay="300">
    <div data-aos="fade-up" data-aos-delay="300">
        <div class="row">
            <div class="col-md-12">
                <div class="demo-gallery">
                    <ul class="lightgallery">
                        @foreach (var item in (List<EliteHospital.Core.SpecialOffer>)ViewData["SpecialOffers"])
                        {
                            var imgSrc = "";
                            if (item.Image != null)
                            {
                                var base64 = Convert.ToBase64String(item.Image);
                                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            }

                            <li data-responsive="@imgSrc" data-src="@imgSrc" data-sub-html=" " data-pinterest-text="Pin it" data-tweet-text="share on twitter ">
                                <a href="">
                                    <img class="img-responsive" src="@imgSrc">
                                    <div class="demo-gallery-poster">
                                        <img src="~/Content/MainSite/images/zoom.png">
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

