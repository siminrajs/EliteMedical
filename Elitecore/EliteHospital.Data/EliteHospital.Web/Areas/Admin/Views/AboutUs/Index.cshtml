
@{
    ViewBag.Title = "About Us";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 header-table">
                <h6>About List</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2 main-table">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">SL.NO</th>
                                @*<th class="text-uppercase text-secondary text-xxs font-weight-bolder ">SHORT DESCRIPTION</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder ">OUR VISION</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder ">OUR MISION</th>*@
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder ">BANNER</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">EDIT</th>
                                @*<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder ">DELETE</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (List<EliteHospital.Core.AboutU>)ViewData["AboutusList"])
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <p class="text-xs font-weight-bold mb-0">@( ((Int32) 1) + ((List<EliteHospital.Core.AboutU>)ViewData["AboutusList"]).IndexOf(item) )</p>
                                        </div>
                                    </td>
                                    @*<td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.ShortDescription</h6>

                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.OurVision</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.OurMission</h6>
                                            </div>
                                        </div>
                                    </td>*@
                                    <td class="align-middle text-center text-sm">
                                        <div>
                                            @{
                                                var imgSrc = "";
                                                if (item.Image != null && item.Image.Length > 0)
                                                {
                                                    var base64 = Convert.ToBase64String(item.Image);
                                                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                }
                                            }
                                            @if (item.Image != null && item.Image.Length > 0)
                                            {
                                                <img src="@imgSrc" class="avatar avatar-sm me-3" alt="user1">
                                            }
                                            else
                                            {

                                            }
                                        </div>
                                    </td>

                                    <td class="align-middle">
                                        @Html.ActionLink("Edit", "EditAboutUs", "AboutUs", new { Id = @item.Id }, new { @class = "text-secondary font-weight-bold text-xs link-tab" })
                                    </td>
                                    @*<td class="align-middle">
                                        @Html.ActionLink("Delete", "DeleteHomeBanner", "HomeBanner", new { Id = @item.Id }, new { @class = "text-secondary font-weight-bold text-xs link-tab" })
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#sidenav-collapse-main ul li a").removeClass("active");
        $("#menuAboutUS").addClass("active");

        $("#pageHeader").text("About Us");
        $("#pageHeader1").text("About Us");
    });
</script>

