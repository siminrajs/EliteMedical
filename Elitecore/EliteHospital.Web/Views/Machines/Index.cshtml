
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>$(document).ready(() => {
            $(".lightgallery").lightGallery({
                pager: true
            });
        });</script>

<section class="inr-cnct" data-aos="fade-up" data-aos-delay="300">
    <div class="cus-container">
        <div class="row">
            <div class="col-md-12 ">
                <div class=" cnt_inr">
                    <h3>
                       Machines
                        <span>
                            Machines
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="hm-specialization mdScn promo" data-aos="fade-up" data-aos-delay="300">
    <div class="cus-container">
        <div data-aos="fade-up" data-aos-delay="300">
            <div class="row p-5">

                @foreach (var item in (List<EliteHospital.Core.tbl_Machines>)ViewData["MachinesList"])
                {
                    var imgSrc = "";
                    if (item.Image != null)
                    {
                        var base64 = Convert.ToBase64String(item.Image);
                        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <div class="col-md-3 img-div">
                        <img src="@imgSrc">
                        <button class="btn">
                            <a style="color:#fff" href="~/Machines/DownLoadFile?id=@item.Id" download="Receipt">
                                DOWNLOAD PDF
                            </a>
                        </button>
                    </div>

                }

            </div>
        </div>
        </div>
</section>
<style>
    .img-div img {
        width: 100%;
       /* height: 400px !important;*/
        object-fit: fill !important;
    }
    .img-div {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

        .img-div img {
            width: 100%;
            height: auto;
        }

        .img-div a {
            color: #fff !important;
            background-image: linear-gradient(to right, #fdb620, #eca40b) !important;
            padding: 10px 15px !important;
            font-size: 12px !important;
            font-weight: 500 !important;
            letter-spacing: 1.5px !important;
            border: none !important;
            border-radius:5px !important;
        }
    .img-div .btn {
        position: absolute;
        top: 90%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        background-color: #fff0;
        color: white;
        font-size: 16px;
        padding: 12px 24px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        text-align: center;
    }
</style>


