
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BookingLayout.cshtml";
}

<div class="main-content">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mn-hd">Book Your Consultation</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="dpt-apmnt dpt-bnr owl-carousel">
                <div class="dpt-nme dpt-active" id="ALL"><a href="#">All</a></div>
                @foreach (var item in (List<EliteHospital.Core.Department >)ViewData["Departments"])
                {
                    <div class="dpt-nme" id="@item.DepartmentName"><a href="#">@item.DepartmentName</a></div>
                }
            </div>
        </div>

    </div>
    <div class="row doctorslist">
        @foreach (var item in (List<EliteHospital.Core.Doctor>)ViewData["DoctorListFromServer"])
        {
            <div deartmentId="@item.DepartmentName" searchstring="@item.DoctorName@item.Position" class="col-md-6 col-xl-4 dr-list doctorprofile">
                <div class="media">
                    @if (item.Doctor_Image != null && item.Doctor_Image.Length > 0)
                    {
                        //var base64 = Convert.ToBase64String(item.Photo);
                        //var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                        <img class="align-self-center mr-4" src="@item.Doctor_Image" alt="Generic placeholder image">
                    }
                    else
                    {
                        <img class="align-self-center mr-4" src="Content/Site/Booking/images/doctors/dummy-f.png" alt="Generic placeholder image">
                    }

                    <div class="media-body">
                        <h5 class="mt-0">@item.DoctorName</h5>
                        @*<p>Designation : <strong>@item.Position</strong></p>*@
                        <p class="mb-0">Specialty : <strong>@item.DepartmentName</strong></p>
                        @if (item.DoctorBioStatus == "ACTIVE")
                        {
                            <div class="bk-apmt">
                                <a href='@Url.Action("BookYourConsultation", "Booking", new { doctorId = item.DoctorId })' class="btn-bkapmnt">Book Appointment</a>

                            </div>}

                        @*<a href="#" class="btn-profile">Profile</a>*@
                    </div>
                </div>
            </div>
        }

