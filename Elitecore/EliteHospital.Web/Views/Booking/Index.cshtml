        $(".dpt-nme").click(function () {
            var id = this.id;
            $('.serch_bx').val("");
            $(".dpt-nme").removeClass("dpt-active");
            $(this).addClass("dpt-active");
            if ($(this).find('a').text().toUpperCase() == "ALL") {
                $(".doctorslist .doctorprofile").css("display", "block");
            }
            else {
                $(".doctorslist .doctorprofile").css("display", "none");
