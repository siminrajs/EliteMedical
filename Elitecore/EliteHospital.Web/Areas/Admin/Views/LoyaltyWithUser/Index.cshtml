<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-6 mb-3" style="display:flex;align-items:center;">
                <h6 style="margin:0px;">LOYALTY POINTS</h6>
            </div>
            <div class="col-6 mb-3">


                @if (@name == null)
                {
                       }
                else
                {
            <div class="msg-card">
                <div class="row">
                    <div class="col-3" style=" display: flex; align-items: center;">
                        <img style="width:100%;" src="~/Images/green-tick.png" />
                    </div>
                    <div class="col-8">
                        @if (@Status == "Added")
                        {
            <h6 class="msg-points">Points added to @name </h6> }
