                        {
            <h6 class="msg-points">Points Redeemed to @name </h6>}
                        <h6 class="msg-points-number"> @purchaseamount </h6>
                        @*<h6 class="msg-points-qar">worth of QAR </h6>*@
                    </div>
                    <div class="col-1">
                        <button class="close-btn" onclick="location.href='@Url.Action("Index", "LoyaltyWithUser")'">&#x2715</button>
                    </div>
                </div>

            </div>}
                        </div>

                       
        <div class="card mb-4">
            <div class="card-header pb-0 header-table">
                <h6 class="user-headline">Users</h6>
                <input type="text" onkeypress="showuserlist(this)" class="form-control" style="width:100%;padding:6px;" id="keyword" name="keyword" placeholder="Search email" />
            </div>
            <div class="form-group" id="usercontainer">

            </div>
          
        </div>
    </div>
</div>
    </div>
<style>
    .msg-card {
        width: 80%;
        float: right;
        background-color: #fff;
        padding: 10px 30px;
        border-radius: 20px;
        box-shadow: rgb(149 157 165 / 20%) 0px 8px 24px;
    }
    .msg-points {
        font-size: 13px;
        margin: 0;
    }
    .msg-points-number {
        margin: 0;
        font-size: 20px;
    }
    .msg-points-qar {
        margin: 0;
        font-size: 13px;
        color: #ababab;
        font-weight: 400;
    }
    .fa-times {
        font-size: 12px;
        color: #ababab;
    }
    .close-btn {
        border: none;
        background: #fff0;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#sidenav-collapse-main ul li a").removeClass("active");
         $("#menuLoyaltyPoint").addClass("active");

    $("#pageHeader").text("Loyalty Points");
    $("#pageHeader1").text("Loyalty Points");


        
    

    showuserlist($("#keyword"));
});

    function showuserlist(element) {
        var keyword = encodeURI($(element).val());
        $("#usercontainer").show(200);
        if (keyword == null) {
            userlist();
        }
        else {
            userlist(keyword);
        }
    }

    function userlist() {
        $("#usercontainer").html('Loading...');
        $("#usercontainer").load("/admin/LoyaltyWithUser/viewuserlistpartial");
    } 

    function userlist(keyword) {
        $("#usercontainer").html('Loading...');
        $("#usercontainer").load("/admin/LoyaltyWithUser/viewuserlistpartial?keyword=" + keyword);
    }

    

    </script>

